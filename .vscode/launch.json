    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/prj/linux_cmake_spdlog_Test/build/spdlog_Test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // set workspace dir
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
            ,
            "preLaunchTask": "BuildTasks"
        }
    ]
}